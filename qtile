import logging
import os
import os.path
import sys
import traceback
from libqtile import confreader, manager, command
from time import sleep

def make_qtile():
    from optparse import OptionParser, OptionGroup
    parser = OptionParser(version="%prog 0.4")
    parser.add_option(
        "-c", "--config",
        action="store", type="string",
        default=None,
        dest="configfile",
        help='Use specified configuration file,'
        ' "default" will load the system default config.'
    )
    parser.add_option(
        "-s", "--socket",
        action="store", type="string",
        default=None,
        dest="socket",
        help='Path to Qtile comms socket.'
    )
    parser.add_option(
        "-n", "--no-spawn",
        action="store_true",
        default=False,
        dest="no_spawn",
        help='Avoid spawning apps. (Used for restart)'
    )
    parser.add_option(
        '-l', '--log-level',
        default='INFO',
        dest='log_level',
        choices=('DEBUG', 'INFO', 'WARNING', 'ERROR', 'CRITICAL'),
        help='Set qtile log level')

    options, args = parser.parse_args()
    log_level = getattr(logging, options.log_level)
    log = manager.init_log(log_level)

    try:
        c = confreader.File(options.configfile)
    except confreader.ConfigError:
        c = confreader.Config()

    return manager.Qtile(c, log=log, fname=options.socket,
                      no_spawn=options.no_spawn)


if __name__ == "__main__":
    q = make_qtile()
    try:
        q.loop()
    except Exception:
        q.log.exception('Qtile crashed')
        sleep(2)
        argv = [sys.executable] + sys.argv
        if '--no-spawn' not in argv:
            argv.append('--no-spawn')
        os.execv(sys.executable, argv)
    q.log.info('Exiting...')
